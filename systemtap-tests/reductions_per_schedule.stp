#! /usr/bin/env stap

global reductions;

probe process("beam.smp").mark("process__unscheduled")
{
    if (pid() == target()) {
        reductions <<< $calls >= 2000 ? 2000 : $calls
    }
}

probe timer.s(1)
{
    printf("Total = %i\n",@count(reductions));
    print(@hist_linear(reductions, 0, 2000, 100));
    delete(reductions);
}
